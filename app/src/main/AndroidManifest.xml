<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ar_app">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />
    <uses-feature android:name="android.hardware.camera.ar" android:required="true" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/anubhavround"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/anubhavnxt"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:finishOnTaskLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Game_act"
            android:screenOrientation="portrait"/>
        <activity android:name=".First_act"
            android:screenOrientation="portrait"/>
        <activity android:name=".Second_act"
            android:screenOrientation="portrait"/>
        <activity android:name=".Third_act"
            android:screenOrientation="portrait"/>
        <activity android:name=".Fourth_act"
            android:screenOrientation="portrait"/>
        <activity android:name=".InfoGuide_act"
            android:screenOrientation="portrait"/>
        <activity android:name=".GameReplay"
            android:screenOrientation="portrait"/>
        <activity android:name=".Planet_1"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />
        <activity android:name=".Planet_2"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />
        <activity android:name="Planet_3_Rotation"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />
        <activity android:name=".Planet4_SolarAct"
            android:screenOrientation="portrait"/>
        <activity android:name="Planet5_SolarSet"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />

        <meta-data android:name="com.google.ar.core" android:value="required" />

    </application>

</manifest>